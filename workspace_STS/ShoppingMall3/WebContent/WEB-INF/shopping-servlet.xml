<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	
	<!-- Dispatcher서블릿클래스가 요청 주소(/hello.do)를 전달받아.
		 hello.do라는 요청이 들어오면 HelloController클래스가 요청되게 선언
	 -->
 	<bean id="hello" name="/hello.do" class="controller.HelloController"></bean>


	<!-- index.do라는 주소로 요청이 들어오면.. ShoppingController클래스가 실행되게 선언 -->
	<bean id="index" name="/index.do" class="controller.ShoppingController"></bean>

	<!--SuJakInfo.jsp페이지에서 카트담기 버튼을 눌러서  
	        카트에 구매할 상품 담기 요청이 들어 오면
		ShoppingController 클래스가 실행되게 선언
	  -->
	<bean id="sutoolcart" 
	      name="/sutoolcart.do" 
	      class="controller.ShoppingController"
	      p:shoppingDao-ref="shoppingDao"></bean>




	<!-- Top.jsp페이지에서 수작업공구메뉴를 클릭하여 sujak.do 주소로 요청이 들어오면
		 ShoppingController클래스가 실행되게 선언
	 -->
    <bean id="sujak" 
          name="/sujak.do" 
    	  class="controller.ShoppingController"
    	  p:shoppingDao-ref="shoppingDao"></bean>
    
    <!-- SujakCenter.jsp에서 이미지 하나를 눌러 상세보기 요청이 들어오면  
         ShoppingController가 실행되게 선언-->	  
    <bean id="suinfo" 
    	  name="/suinfo.do" 
    	  class="controller.ShoppingController"
    	  p:shoppingDao-ref="shoppingDao"></bean> 	  
    	  
    	  
	<!-- 데이터베이스 작업할 DAO객체 생성 -->
    <bean id="shoppingDao" 
    	  class="model.ShoppingDAO" 
    	  p:dataSource-ref="dataSource"  />  
	


	<!-- 데이터베이스 설정하기(오라클 데이터베이스) 
	    : 커넥션풀 설정(DataSource) -->
	<bean id="dataSource" 
	   class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	
		<!-- DriverManagerDataSource(커넥션풀)클래스에 
		     XML데이터형태로 멤버변수들에 각각 DB연결 정보를 저장 -->
		<property name="driverClassName">
			<value>oracle.jdbc.driver.OracleDriver</value>
		</property>
		
		<property name="url">
			<value>jdbc:oracle:thin:@localhost:1521:XE</value>
		</property>
		
		<property name="username">
			<value>system</value>
		</property>
		
		<property name="password">
			<value>1234</value>
		</property>	
	</bean>

<!-- 해당 Controller로부터 응답결과를 보여줄 JSP페이지를 호출하기 위해 설정한 객체 지정 -->
	<bean id="viewResolver" 
	      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
	
	<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
	<property name="suffix" value=".jsp"/>
	
	</bean>
</beans>















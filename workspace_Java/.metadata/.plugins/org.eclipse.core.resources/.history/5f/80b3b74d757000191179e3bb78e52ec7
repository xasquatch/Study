package Chapter14;

public class DaemonThreadTest {
	
	static class SaveDaemon extends Thread{

		public SaveDaemon() {
			this.setDaemon(true);
		}

		@Override
		public void run() {
			while (true) {
				try {
					Thread.sleep(1000*5);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
				System.out.println("자동저장함");
			}
		}
		
		
	}
	
	public static void main(String[] args) {
		

	}

}
